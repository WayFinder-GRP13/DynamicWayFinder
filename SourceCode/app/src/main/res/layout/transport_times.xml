<androidx.core.widget.NestedScrollView android:id="@+id/bottom_sheet2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:background="@android:color/white"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textStyle="bold"/>

            <LinearLayout
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="left"
                        android:layout_margin="10dp"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/luasClickable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_corners"
                            android:onClick="TurnOnOff"
                            android:scaleType="fitXY"
                            android:src="@drawable/luas" />

                        <TextView
                            android:id="@+id/luasText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/luasClickable"
                            android:layout_alignTop="@+id/luasClickable"
                            android:layout_alignRight="@+id/luasClickable"
                            android:layout_alignBottom="@+id/luasClickable"
                            android:layout_margin="1dp"
                            android:gravity="bottom|center"
                            android:text="Luas"
                            android:textColor="@color/white" />

                    </RelativeLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="right"
                        android:layout_margin="10dp"
                        android:gravity="center">


                        <ImageView
                            android:id="@+id/busClickable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="TurnOnOff"
                            android:background="@drawable/rounded_corners"
                            android:scaleType="fitXY"
                            android:src="@drawable/bus" />

                        <TextView
                            android:id="@+id/busText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/busClickable"
                            android:layout_alignTop="@+id/busClickable"
                            android:layout_alignRight="@+id/busClickable"
                            android:layout_alignBottom="@+id/busClickable"
                            android:layout_margin="1dp"
                            android:gravity="bottom|center"
                            android:text="Bus"
                            android:textColor="@color/white" />

                    </RelativeLayout>




                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>