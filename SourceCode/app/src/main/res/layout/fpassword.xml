<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/closepwordmenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/slightgrey"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changepwordprogress"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:id="@+id/forgotpwordemail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/forgotpwordemail"
                android:textSize="20sp"
                android:textColorHint="@color/slightgrey"
                android:layout_gravity="center_horizontal"
                android:inputType="textEmailAddress"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/newpword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/sendpwordemail"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
